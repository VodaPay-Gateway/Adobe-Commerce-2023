<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <!-- Payment Method Facade configuration -->
    <virtualType name="VodaPayGatewayFacade" type="Magento\Payment\Model\Method\Adapter">
        <arguments>
            <argument name="code" xsi:type="const">\VPG\VodaPayGateway\Model\Ui\ConfigProvider::CODE</argument>
            <argument name="formBlockType" xsi:type="string">Magento\Payment\Block\Form</argument>
            <argument name="infoBlockType" xsi:type="string">VPG\VodaPayGateway\Block\Info</argument>
            <argument name="valueHandlerPool" xsi:type="object">VodaPayGatewayValueHandlerPool</argument>
            <argument name="commandPool" xsi:type="object">VodaPayGatewayCommandPool</argument>
        </arguments>
    </virtualType>

    <!-- Configuration reader -->
    <virtualType name="VodaPayGatewayConfig" type="Magento\Payment\Gateway\Config\Config">
        <arguments>
            <argument name="methodCode" xsi:type="const">\VPG\VodaPayGateway\Model\Ui\ConfigProvider::CODE</argument>
        </arguments>
    </virtualType>

    <!-- Logger, initialized with  -->
    <virtualType name="VodaPayGatewayLogger" type="Magento\Payment\Model\Method\Logger">
        <arguments>
            <argument name="config" xsi:type="object">VodaPayGatewayConfig</argument>
        </arguments>
    </virtualType>

    <type name="VPG\VodaPayGateway\Gateway\Http\Client\AuthorizeClient">
        <arguments>
            <argument name="logger" xsi:type="object">VodaPayGatewayLogger</argument>
            <argument name="clientFactory" xsi:type="object">Magento\Framework\HTTP\ZendClientFactory</argument>
        </arguments>
    </type>

    <!-- Commands infrastructure -->
    <virtualType name="VodaPayGatewayCommandPool" type="Magento\Payment\Gateway\Command\CommandPool">
        <arguments>
            <argument name="commands" xsi:type="array">
                <item name="authorize" xsi:type="string">VodaPayGatewayAuthorizeCommand</item>
                <item name="capture" xsi:type="string">VodaPayGatewayCaptureCommand</item>
            </argument>
        </arguments>
    </virtualType>
    
    <virtualType name="VodaPayGatewayAuthorizeCommand" type="Magento\Payment\Gateway\Command\GatewayCommand">
        <arguments>
            <argument name="requestBuilder" xsi:type="object">VPG\VodaPayGateway\Gateway\Request\AuthorizationRequest</argument>
            <argument name="handler" xsi:type="object">VPG\VodaPayGateway\Gateway\Response\AuthorizeResponseHandler</argument>
            <argument name="transferFactory" xsi:type="object">VPG\VodaPayGateway\Gateway\Http\TransferFactory</argument>
            <argument name="client" xsi:type="object">VPG\VodaPayGateway\Gateway\Http\Client\AuthorizeClient</argument>
        </arguments>
    </virtualType>

    <virtualType name="VodaPayGatewayCaptureCommand" type="Magento\Payment\Gateway\Command\GatewayCommand">
        <arguments>
            <argument name="requestBuilder" xsi:type="object">VPG\VodaPayGateway\Gateway\Request\CaptureRequest</argument>
            <argument name="handler" xsi:type="object">VPG\VodaPayGateway\Gateway\Response\CaptureHandler</argument>
            <argument name="transferFactory" xsi:type="object">VPG\VodaPayGateway\Gateway\Http\TransferFactory</argument>
            <argument name="validator" xsi:type="object">VPG\VodaPayGateway\Gateway\Validator\ResponseCodeValidator</argument>
            <argument name="client" xsi:type="object">VPG\VodaPayGateway\Gateway\Http\Client\CaptureClient</argument>
        </arguments>
    </virtualType>
    <!-- Authorization Request -->

    <type name="VPG\VodaPayGateway\Gateway\Request\AuthorizationRequest">
        <arguments>
            <argument name="config" xsi:type="object">VodaPayGatewayConfig</argument>
            <argument name="logger" xsi:type="object">VodaPayGatewayLogger</argument>
        </arguments>
    </type>

    <!-- Value handlers infrastructure -->
    <virtualType name="VodaPayGatewayValueHandlerPool" type="Magento\Payment\Gateway\Config\ValueHandlerPool">
        <arguments>
            <argument name="handlers" xsi:type="array">
                <item name="default" xsi:type="string">VodaPayGatewayConfigValueHandler</item>
            </argument>
        </arguments>
    </virtualType>
    <virtualType name="VodaPayGatewayConfigValueHandler" type="Magento\Payment\Gateway\Config\ConfigValueHandler">
        <arguments>
            <argument name="configInterface" xsi:type="object">VodaPayGatewayConfig</argument>
        </arguments>
    </virtualType>

    <type name="VPG\VodaPayGateway\Block\Info">
        <arguments>
            <argument name="config" xsi:type="object">VodaPayGatewayConfig</argument>
        </arguments>
    </type>

</config>
